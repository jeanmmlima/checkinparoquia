<div class="row">
    <div class="col-sm-6">
        <h2>Participantes</h2>
    </div>
    <div class="col-sm-6">
        <button class="btn btn-primary float-right" onclick='javascript:window.print()'><i class="icon-print"></i></button>
    </div>
</div>

<hr>

<p>Evento: {{descricao}}</p>
<p>Data: {{getdata data}}</p>
<p>Horário: {{gethorario data}}</p>



<div class="card">
    <div class="row">
        <div class="col-sm-4 text-center">
            <b>Ordem</b>
        </div>
        <div class="col-sm-8">
            <b>Nome e Email</b>
        </div>
    </div>
</div>


{{#each usuariosevento}}
<div class="card">
        <div class="row">
            <div class="col-sm-4 text-center">
            {{getindex @index}}
            </div>
            <div class="col-sm-8">
                {{usuario.nome}} - {{usuario.email}}
            </div>
        </div>

</div>
{{else}}
<h4 class="mt-3">Nenhuma Usuário Cadastrado</h4>

{{/each}}

</div>
